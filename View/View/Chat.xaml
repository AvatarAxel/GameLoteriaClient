<Window x:Class="View.Chat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="Chat" Height="411" Width="278">
	<Grid>
		<TextBox x:Name="txtChat" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="258" Height="263"/>
		<TextBox x:Name="txtMessage" HorizontalAlignment="Center" Margin="0,290,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="258"/>
		<Button x:Name="BtnSend" Content="Send" HorizontalAlignment="Left" Margin="10,330,0,0" VerticalAlignment="Top" Width="87" Click="BtnSend_Click"/>

	</Grid>
</Window>
