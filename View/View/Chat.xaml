<Window x:Class="View.Chat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="Chat" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtMessage" HorizontalAlignment="Left" Margin="28,345,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="662"/>
        <Button x:Name="BtnSend" Content="Send" HorizontalAlignment="Left" Margin="705,345,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.328,-0.248" Width="67" Height="18" Click="BtnSend_Click"/>
        <Button x:Name="BtnExit" Content="Exit" HorizontalAlignment="Left" Margin="705,382,0,0" VerticalAlignment="Top" Width="67" Click="BtnExit_Click"/>
        <TextBlock x:Name="txtBlockChat" HorizontalAlignment="Center" Margin="0,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="744" Height="302"/>
    </Grid>
</Window>
